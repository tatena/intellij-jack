<?xml version="1.0" encoding="UTF-8"?>
<templateSet group="Jack">

    <template name="while"
              value="while ($EXPR$) {&#10;          $END$&#10;}"
              description="while (...) { }" toReformat="true" toShortenFQNames="true">
        <variable name="EXPR" expression="" defaultValue="" alwaysStopAt="true"/>
        <context>
            <option name="JACK_STATEMENT" value="true"/>
        </context>
    </template>

